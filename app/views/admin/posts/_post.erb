<li>
  <h3><%= link_to post.title, [:admin, post] %></h3>
  <div class="excerpt"><%= truncate(post.entry, :length => 90) %></div>
  <div class="actions">
    <%= link_to 'Edit', [:edit, :admin, post] %>
    <%= link_to 'Remove', [:admin, post], :method => :delete, 
         :confirm => "Are you sure?" %>
  </div>
</li>